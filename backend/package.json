{
  "name": "dijital-twin-backend",
  "version": "1.0.0",
  "description": "Digital Twin Factory Monitoring System - Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
